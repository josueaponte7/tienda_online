{% extends 'base.html.twig' %}

{% block title %}Estadísticas de Logins{% endblock %}

{% block body %}
    <h1>Estadísticas de Logins</h1>

    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Usuario</th>
            <th>Cantidad de Logins</th>
        </tr>
        </thead>
        <tbody>
        {% for user, count in loginStats %}
            <tr>
                <td>{{ user }}</td>
                <td>{{ count }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">No hay datos de logins disponibles.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('admin_dashboard') }}" class="btn btn-secondary mt-3">Volver al Dashboard</a>
{% endblock %}
